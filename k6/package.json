{
  "name": "k6-load-testing",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/hoprnet/hoprnet",
  "author": "Hoprnet",
  "license": "GNU v3",
  "devDependencies": {
    "@babel/core": "7.22.20",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "7.20.7",
    "@babel/preset-env": "7.22.20",
    "@babel/preset-typescript": "7.22.15",
    "@types/k6": "~0.46.3",
    "@types/node": "^20.6.2",
    "@types/webpack": "5.28.2",
    "babel-loader": "9.1.3",
    "clean-webpack-plugin": "4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.3",
    "typescript": "5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "5.1.4",
    "webpack-glob-entries": "^1.0.1"
  },
  "scripts": {
    "check": "tsc",
    "build-tsc": "tsc --build tsconfig.json",
    "build": "webpack",
    "isntall:xk6:mac": "docker run --rm -it -e GOOS=darwin -u \"$(id -u):$(id -g)\" -v \"${PWD}:/xk6\" grafana/xk6 build v0.42.0 --with github.com/grafana/xk6-output-prometheus-remote",
    "cluster:start": "cd ../../hoprnet && ./scripts/setup-local-cluster.sh -i topologies/full_interconnected_cluster.sh --listen-host 0.0.0.0",
    "cluster:stop": "pkill -f ./scripts/setup-local-cluster.sh",
    "test": "npm run test:local",
    "test:local": "npm run build && K6_PROMETHEUS_RW_TREND_AS_NATIVE_HISTOGRAM=true K6_OUT=xk6-prometheus-rw K6_PROMETHEUS_RW_SERVER_URL=https://prometheus.prod.hoprtech.net/api/v1/write ./k6 run ./dist/constant-traffic.test.js",
    "test:pluto": "docker-compose down; docker-compose up 1&> /dev/null &",
    "test:gcp": "npm run build && ENVIRONMENT_NAME=gcp WORKLOAD_NAME=simple K6_PROMETHEUS_RW_TREND_AS_NATIVE_HISTOGRAM=true K6_OUT=xk6-prometheus-rw K6_PROMETHEUS_RW_SERVER_URL=https://prometheus.prod.hoprtech.net/api/v1/write ./k6 run ./dist/constant-traffic.test.js",
    "test:setup": "npm run build && ENVIRONMENT_NAME=gcp node ./dist/setup-environment.test.js"
  },
  "dependencies": {
    "@hoprnet/hopr-sdk": "^2.0.0-beta.10"
  }
}
